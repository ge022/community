<%= form_with(model: forum_reply, url: community_forum_forum_reply_path(@community.id, @forum.id, forum_reply.id), local: true, class: 'needs-validation', html: {novalidate: 'novalidate'}) do |form| %>
  <% if forum_reply.errors.any? %>
    <div id="error_explanation">
      <div><%= pluralize(forum_reply.errors.count, "error") %> prohibited this reply from being saved:</div>

      <ul>
      <% forum_reply.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :post %>
    <%= form.text_area :post, id: :forum_reply_post, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Reply is required
    </div>
  </div>

  <div class="form-group-inline">
    <%= form.submit "Update", class: "btn btn-primary" %>
    <%= link_to 'Back', community_forum_path(id: @forum.id), class: "btn btn-secondary" %>
  </div>

<% end %>

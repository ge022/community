<div class="container-fluid" id="wrapper">

  <h2>Memberships</h2>
  <p id="notice"><%= notice %></p>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Display Name</th>
        <th>Community</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= member.display_name %></td>
          <td><%= member.community %></td>
          <td><%= member.user %></td>
          <td><%= link_to 'Show', member, class: 'btn btn-outline-primary btn-sm' %></td>
          <td><%= link_to 'Edit', edit_member_path(member), class: 'btn btn-outline-success btn-sm' %></td>
          <td><%= link_to 'Destroy', member, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-outline-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="bottom-links">
    <%= link_to 'New Member', new_member_path, class: 'btn btn-secondary' %>
  </div>

</div>
